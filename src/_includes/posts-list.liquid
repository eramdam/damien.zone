<ul class="blog-posts">
{%- for post in posts -%}
<li>
  <span>
    <i>
      <time datetime="{{ post.date | dateToRfc3339 }}" title="{{ post.date | format: "iii, MMM d, y, ppp" }}">
        {{ post.date | format: 'd MMM, yyyy' }}
      </time>
    </i>
  </span>
  <a href="{{ post.url }}">{{ post.data.title | escape }}</a>
</li>
{%- endfor -%}
</ul>