<meta name="theme-color" content="#212028" class="color-scheme-theme" media="(prefers-color-scheme: dark)">
<meta name="theme-color" content="#F8F1F1" class="color-scheme-theme" media="(prefers-color-scheme: light)">
<!-- Should be picked up by Discord -->
<meta name="theme-color" content="#be133c" class="color-scheme-discord" media="(min-width: 99999999999px)">
<script>
  const isChromeAndroid =
    navigator.userAgentData?.brands.some((b) => b.brand.includes('Google Chrome')) && navigator.userAgentData.mobile;
  if (isChromeAndroid) {
    document.querySelectorAll('meta[name="theme-color"].color-scheme-theme').forEach((e) => e.remove());
    document.querySelector('meta[name="theme-color"].color-scheme-discord')?.removeAttribute('media');
  }
</script>
