---
description: "Posts tagged with {{ tag }}"
layout: "base"
permalink: "/tag/{{ tag | url_encode }}/"
pagination:
  data: "collections"
  alias: "tag"
  size: 1
  addAllPagesToCollections: true
  filter: ["blog", "all", "tagList"]
---
<h1 class="tag">#{{ tag }}</h1>

{% assign posts = collections[tag] | reverse %}
{% render 'posts-list', posts: posts %}
