---
title: "Blog"
description: "Posts tagged with {{ tag }}"
layout: "base"
permalink: "/tag/{{ tag | url_encode }}/"
pagination:
  data: "collections"
  alias: "tag"
  size: 1
  addAllPagesToCollections: true
  filter: ["blog", "all"]
---

<h1 class="tag">
  #{{ tag }}
</h1>

<ul class="blog-posts">
{% for post in collections[tag] %}
<li>
  <span>
    <i>{{ post.data.published_date | postDate }}</i>
  </span>
  <a href="{{ post.url }}">{{ post.data.title | escape }}</a>
</li>
{% endfor %}
</ul>