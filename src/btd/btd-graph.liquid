<script>
  (async () => {
    const expectedHostsCounts = document.querySelectorAll('.datawrapper-wrapper').length;
    if (expectedHostsCounts === 0) {
      return;
    }
    new MutationObserver((_muts, observer) => {
      const hosts = document.querySelectorAll('datawrapper-visualization');
      if (hosts.length < expectedHostsCounts) {
        return;
      }

      observer.disconnect();

      hosts.forEach((host) => {
        if (!host.shadowRoot?.adoptedStyleSheets) {
          return;
        }

        const css = new CSSStyleSheet();
        css.replaceSync(`
      * {
        font-family: Atkinson Hyperlegible, ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
      }

      @media (prefers-color-scheme: dark) {
        .y-base-lines.grid-y line {
              stroke: rgba(255,255,255,.4);
            }
      }
      `);
        host.shadowRoot.adoptedStyleSheets = [...host.shadowRoot.adoptedStyleSheets, css];
      });
    }).observe(document.body, {
      childList: true,
      subtree: true,
    });
  })();
</script>
